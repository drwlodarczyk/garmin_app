<div class="text-center my-4">
    <div style="max-width: 220px; margin: 0 auto; position: relative;">
        <canvas id="caloriesDonut" width="220" height="220"></canvas>
        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; font-size: 1.5rem;">
            2152
        </div>
    </div>
    <p class="text-muted mt-3">Active + Resting = Total Calories</p>
</div>

<div class="d-flex justify-content-center gap-5 mt-3">
    <div class="text-center mr-3">
        <div class="fw-bold" style="color: red;">237</div>
        <div class="text-muted">Active</div>
    </div>
    <div class="text-center">
        <div class="fw-bold" style="color: #007bff;">1915</div>
        <div class="text-muted">Resting</div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const ctx = document.getElementById('caloriesDonut').getContext('2d');

        new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Active', 'Resting'],
                datasets: [{
                    data: [237, 1915],
                    backgroundColor: ['#e63946', '#1d4ed8'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%',
                plugins: {
                    legend: { display: false }
                }
            }
        });
    });
</script>
